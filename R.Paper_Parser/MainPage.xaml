<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="R.Paper_Parser.MainPage">

    <StackLayout Padding="10">
        <!-- Registration Section -->
        <Label Text="Register" FontSize="24" HorizontalOptions="Center" />
        <Entry x:Name="RegisterEmailEntry" Placeholder="Email" />
        <Entry x:Name="RegisterPasswordEntry" Placeholder="Password" IsPassword="True" />
        <Button Text="Register" Clicked="OnRegisterClicked"/>

        <!-- Login Section -->
        <Label Text="Login" FontSize="24" HorizontalOptions="Center" />
        <Entry x:Name="LoginEmailEntry" Placeholder="Email" />
        <Entry x:Name="LoginPasswordEntry" Placeholder="Password" IsPassword="True" />
        <Button Text="Login" Clicked="OnLoginClicked"/>
    </StackLayout>

</ContentPage>
